<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.hp.paytm.Aditi_chaurasia"
    android:onClick="aditi"
    android:background="@drawable/bg_poster">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView3"
        android:src="@drawable/aditichaurasia"
        android:layout_marginBottom="242dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:clickable="true"
        android:onClick="aditi" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ABOUT:"
        android:id="@+id/textView10"
        android:layout_marginBottom="190dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textColor="#FFFFFFFF" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Aditi Chaurasia is a small town girl from a village near Khajuraho and is widely known as the Co-founder of EngineerBabu and Indore Startups Community.EngineerBabu is full of life startups, we are canvassing dream of others.   "
        android:id="@+id/textView11"
        android:layout_alignTop="@+id/textView10"
        android:layout_alignParentStart="true"
        android:layout_marginTop="34dp"
        android:textColor="#FFFFFFFF" />
</RelativeLayout>
